<% include ../layouts/header %>

<div class="container">
	<div class="row text-center">
		<div class="col-12">
			<h2 class="my-4">
				Create a New Park
			</h2>
			<div class="info-form">
				<form class="col-12 col-md-6 offset-md-3" action="/parks" method="POST">
					<div class="form-group">
						<input type="text" class="form-control" name="park[name]" placeholder="name">
					</div>
					<div class="form-group">
						<input type="number" class="form-control" name="park[price]" placeholder="price" min="0.01" step="0.01">
					</div>
					<div class="form-group">
						<input type="text" class="form-control" name="park[image]" placeholder="image">
					</div>
					<div class="form-group">
						<textarea class="form-control" name="park[description]" placeholder="description" rows="5"></textarea>
					</div>
					<button class="btn btn-primary form-control" type="submit">Submit</button>
				</form> 
			</div>
			
		</div>
		
	</div>
</div>

<% include ../layouts/footer %>